# Server Configuration
PORT=8080

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Frontegg Authentication Configuration
# Get these values from your Frontegg dashboard at https://portal.frontegg.com
FRONTEGG_CLIENT_ID=your_frontegg_client_id_here
FRONTEGG_API_KEY=your_frontegg_api_key_here

# CORS Configuration
# Development environment
DEV_CORS_ORIGIN=http://localhost:3000
# Production environment (update with your actual domain)
PROD_CORS_ORIGIN=https://your-production-domain.com

# Node Environment, Change this to 'production' in the production environment
NODE_ENV=development 